name: Delete old workflow runs
on:
  schedule:
    - cron: '0 0 1 * *'
# Run monthly, at 00:00 on the 1st day of month.

jobs:
  del_runs:
    runs-on: ubuntu-latest
    steps:
      - name: Delete workflow runs
      uses: kxjhcmc/delete-workflow-runs@main
      with:
        retain_days: 1
        keep_minimum_runs: 3
